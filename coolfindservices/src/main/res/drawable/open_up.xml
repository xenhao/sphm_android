<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <solid android:color="#fffc940e" />

    <padding
        android:bottom="6dp"
        android:left="10dp"
        android:right="10dp"
        android:top="6dp" />

    <stroke
        android:dashGap="0dp"
        android:dashWidth="10dp"
        android:width="1dp"
        android:color="#fffc940e" />

    <corners
        android:topLeftRadius="@dimen/margin2"
        android:topRightRadius="@dimen/margin2"
        android:radius="1dp"
        android:bottomLeftRadius="0dp"
        android:bottomRightRadius="0dp" />

</shape>