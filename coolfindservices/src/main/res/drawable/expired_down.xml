<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <solid android:color="#ff770808" />

    <padding
        android:bottom="6dp"
        android:left="10dp"
        android:right="10dp"
        android:top="6dp" />

    <stroke
        android:dashGap="0dp"
        android:dashWidth="10dp"
        android:width="1dp"
        android:color="#ff770808" />

    <corners
        android:bottomLeftRadius="@dimen/margin2"
        android:bottomRightRadius="@dimen/margin2"
        android:radius="1dp"
        android:topLeftRadius="0dp"
        android:topRightRadius="0dp" />

</shape>