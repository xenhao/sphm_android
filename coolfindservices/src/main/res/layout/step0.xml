<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/margin4" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin4"
        android:gravity="center"
        android:orientation="horizontal" >

        <com.pa.common.TypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Account Detail"
            android:textColor="@color/pa_blue"
            android:textSize="@dimen/txt_big"
            app:typeface="OpenSans-Bold" />

        <View android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin1"
            android:layout_weight="1"
            android:background="@color/pa_blue" />
    </LinearLayout>

    

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.pa.common.TypefaceEditText
        android:id="@+id/co_main_email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edittext_height3"
        android:layout_marginTop="@dimen/margin4"
        android:background="@drawable/white_rectangle_solid"
        android:gravity="left|center_vertical"
        android:hint="Email Address"
        android:inputType="text|textEmailAddress"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_big"
        app:typeface="OpenSans-Regular" />
            
           <!--  <com.pa.common.TypefaceEditText
                android:id="@+id/txtUsername"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height3"
                android:layout_marginTop="@dimen/margin4"
                android:background="@drawable/gray_rectangle_solid"
                android:gravity="left|center_vertical"
                android:hint="Username"
                android:textColor="@color/pa_dark_grey"
                android:textSize="@dimen/txt_big"
                app:typeface="OpenSans-Regular" /> -->

            <com.pa.common.TypefaceEditText
                android:inputType="text|textPassword"
                android:id="@+id/txtPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height3"
                android:background="@drawable/white_rectangle_solid"
                android:gravity="left|center_vertical"
                android:hint="Password"
                android:textColor="@color/pa_dark_grey"
                android:textSize="@dimen/txt_big"
                app:typeface="OpenSans-Regular" />
            <com.pa.common.TypefaceEditText
                android:inputType="text|textPassword"
                
                android:id="@+id/txtPasswordConfirmation"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height3"
                android:background="@drawable/white_rectangle_solid"
                android:gravity="left|center_vertical"
                android:hint="Retype Password"
                android:textColor="@color/pa_dark_grey"
                android:textSize="@dimen/txt_big"
                app:typeface="OpenSans-Regular" />
            
            
            

            <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin2"
                android:orientation="horizontal" >

                <com.pa.common.TypefaceButton
                    android:id="@+id/btnCancel2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/edittext_height"
                    android:layout_marginRight="@dimen/margin2"
                    android:layout_weight="1"
                    android:background="@drawable/btn_effect_gray"
                    android:gravity="center"
                    android:paddingRight="@dimen/margin3"
                    android:text="CANCEL"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_big"
                    android:textStyle="normal"
                    app:typeface="OpenSans-Regular" />

                <com.pa.common.TypefaceButton
                    android:id="@+id/btnNext2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/edittext_height"
                    android:layout_weight="1"
                    android:background="@drawable/btn_effect_blue"
                    android:gravity="center"
                    android:text="NEXT"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_big"
                    android:textStyle="normal"
                    app:typeface="OpenSans-Regular" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>