<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <com.pa.common.TypefaceTextView
        android:id="@+id/txt_tag"
        android:layout_width="match_parent"
        android:layout_height="@dimen/edittext_height3"
        android:gravity="left|center_vertical"
        android:text="Select your category"
        android:textAppearance="@style/Label"
        android:textSize="@dimen/txt_big"
        app:typeface="OpenSans-Bold" />

    <LinearLayout         android:layout_marginBottom="@dimen/margin2"

        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <!--
             <Spinner
            
            android:id="@+id/value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@android:color/transparent"
            android:paddingLeft="5dp" />
        -->

        <com.pa.common.TypefaceTextView
            android:id="@+id/value"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edittext_height3"
            android:background="@drawable/white_rectangle_solid"
            android:drawableRight="@drawable/icon_arrow_down"
            android:gravity="left|center_vertical"
            android:hint="Select your option"
            android:textAppearance="@style/Placeholder"
            android:textSize="@dimen/txt_big"
            app:typeface="OpenSans-Regular" />
    </LinearLayout>

    <!--
         <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/dropdown_line" />
    -->

    <LinearLayout
        android:id="@+id/kid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin6" >
    </LinearLayout>

</LinearLayout>