<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/linearLayout1"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical" 
android:gravity="center"
android:background="#99000000"
>
	<LinearLayout 
	    android:gravity="center"
	    android:background="@drawable/gray_rectangle_gray_border"
	    android:orientation="vertical"
	    android:layout_width="wrap_content" android:layout_height="wrap_content">
	    
    <DatePicker
         android:id="@+id/datePicker1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" >
    </DatePicker>

    <com.pa.common.CustomTimePicker android:layout_marginTop="@dimen/margin4"
        android:id="@+id/timePicker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </com.pa.common.CustomTimePicker>

    <View android:layout_width="match_parent" android:layout_height="@dimen/divider" 
        android:background="#ff000000"
        android:layout_marginTop="@dimen/margin4"
        android:layout_marginBottom="@dimen/margin4"
        />
    
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="DONE" android:id="@+id/done"
        />
    
    
    	</LinearLayout>
    
    
</LinearLayout>