<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="@dimen/margin4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin3"
        android:layout_marginRight="@dimen/margin3">

        <com.pa.common.TypefaceTextView
            android:id="@+id/commentAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Bold"
            android:textSize="@dimen/txt_big"
            android:text="Merchant"
            android:textColor="@color/pa_orange"
            app:typeface="OpenSans-Bold" />

        <com.pa.common.TypefaceTextView
            android:visibility="gone"
            android:id="@+id/commentDate"
            android:layout_toRightOf="@id/commentAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/Normal"
            android:textSize="@dimen/txt_medium"
            android:text="1d"
            app:typeface="OpenSans-Regular"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <com.pa.common.TypefaceTextView
        android:id="@+id/commentText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Normal"
        android:textSize="@dimen/txt_big"
        android:text="Does your office building allow durian delivery?"
        app:typeface="OpenSans-Regular"
        android:layout_marginLeft="@dimen/margin3"
        android:layout_marginRight="@dimen/margin3"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:layout_marginTop="@dimen/margin4"
        android:background="@color/pa_grey" />

</LinearLayout>