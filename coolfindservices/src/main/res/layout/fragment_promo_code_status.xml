<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pa_grey"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/edittext_height3"
        android:background="@color/pa_light_orange"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/menu"
            android:layout_width="@dimen/edittext_height"
            android:layout_height="@dimen/edittext_height"
            android:padding="@dimen/padding"
            android:src="@drawable/img_back" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <com.pa.common.TypefaceTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="VOUCHER &amp; PROMOTION"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_extra_big"
                app:typeface="OpenSans-Bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/margin4"
        android:layout_marginRight="@dimen/margin4"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin4"
            android:gravity="center"
            android:orientation="horizontal" >

            <com.pa.common.TypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Promo Code"
                android:textColor="@color/pa_blue"
                android:textSize="@dimen/txt_extra_big"
                app:typeface="OpenSans-Bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin1"
                android:layout_weight="1"
                android:background="@color/pa_blue" />
        </LinearLayout>

                <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin4"
            android:gravity="center"
            android:orientation="horizontal" >

            <com.pa.common.TypefaceTextView
                android:id="@+id/txt_promo_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="NC000k"
                android:textColor="@color/pa_free_credit"
                android:textSize="@dimen/txt_xx_big"
                app:typeface="OpenSans-Bold" />

            <View android:layout_width="0dp" android:layout_weight="1" android:layout_height="1dp" /> 

            <com.pa.common.TypefaceTextView
                android:id="@+id/txt_status_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Successfully applied"
                android:textColor="@color/pa_dark_grey"
                android:textSize="@dimen/txt_big"
                app:typeface="OpenSans-Regular" />

        </LinearLayout>
        
        
        <View
            android:layout_marginTop="@dimen/margin4"
            
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/margin1"
                android:background="@color/pa_line_grey" />

        
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin4"
            android:gravity="center"
            android:orientation="horizontal" >

            <com.pa.common.TypefaceTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Total Payment"
                android:textColor="@color/pa_blue"
                android:textSize="@dimen/txt_big"
                app:typeface="OpenSans-Bold" />
            <com.pa.common.TypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=":"
                android:textColor="@color/pa_blue"
                android:textSize="@dimen/txt_big"
                app:typeface="OpenSans-Bold" />
            
            <com.pa.common.TypefaceTextView
                android:id="@+id/total_payment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="right"
                android:text="123"
                android:textColor="@color/pa_dark_grey"
                android:textSize="@dimen/txt_big"
                app:typeface="OpenSans-Regular" />

        </LinearLayout>
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin4"
            android:gravity="center"
            android:orientation="horizontal" >

            <com.pa.common.TypefaceTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Voucher Value"
                android:textColor="@color/pa_blue"
                android:textSize="@dimen/txt_big"
                app:typeface="OpenSans-Bold" />
            <com.pa.common.TypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=":"
                android:textColor="@color/pa_blue"
                android:textSize="@dimen/txt_big"
                app:typeface="OpenSans-Bold" />
            
            <com.pa.common.TypefaceTextView
                android:id="@+id/voucher_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="right"
                android:text="123"
                android:textColor="@color/pa_dark_grey"
                android:textSize="@dimen/txt_big"
                app:typeface="OpenSans-Regular" />

        </LinearLayout>
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin4"
            android:gravity="center"
            android:orientation="horizontal" >

            <com.pa.common.TypefaceTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text=""
                android:textColor="@color/pa_blue"
                android:textSize="@dimen/txt_big"
                app:typeface="OpenSans-Bold" />
            <com.pa.common.TypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=" "
                android:textColor="@color/pa_blue"
                android:textSize="@dimen/txt_big"
                app:typeface="OpenSans-Bold" />
            
            <View
                android:layout_marginLeft="@dimen/margin1"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="1dp"
			android:background="@color/pa_dark_grey"
			 />
            

        </LinearLayout>
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin2"
            android:gravity="center"
            android:orientation="horizontal" >

            <com.pa.common.TypefaceTextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Final Cost"
                android:textColor="@color/pa_blue"
                android:textSize="@dimen/txt_big"
                app:typeface="OpenSans-Bold" />
            <com.pa.common.TypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=":"
                android:textColor="@color/pa_blue"
                android:textSize="@dimen/txt_big"
                app:typeface="OpenSans-Bold" />
            
            <com.pa.common.TypefaceTextView
                android:id="@+id/final_cost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="right"
                android:text="0"
                android:textColor="@color/pa_dark_grey"
                android:textSize="@dimen/txt_big"
                app:typeface="OpenSans-Regular" />

        </LinearLayout>
        
        
        
        
        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.pa.common.TypefaceButton
                android:id="@+id/btn_skip"
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="@dimen/edittext_height"
                android:layout_marginBottom="@dimen/margin4"
                android:background="@drawable/btn_effect_gray"
                android:gravity="center"
                android:paddingLeft="@dimen/margin3"
                android:paddingRight="@dimen/margin3"
                android:text="BACK"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_medium"
                android:textStyle="normal"
                app:typeface="OpenSans-Regular" />

            <com.pa.common.TypefaceButton
                android:layout_marginLeft="@dimen/margin1"
                android:id="@+id/btn_ok"
                android:layout_width="0dp" android:layout_weight="1"
                android:layout_height="@dimen/edittext_height"
                android:background="@drawable/btn_effect_blue_light"
                android:gravity="center"
                android:paddingLeft="@dimen/margin3"
                android:paddingRight="@dimen/margin3"
                android:text="CONFIRM"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_medium"
                android:textStyle="normal"
                app:typeface="OpenSans-Regular" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>