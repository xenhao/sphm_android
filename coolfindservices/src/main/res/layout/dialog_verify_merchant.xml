<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cc000000"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/margin8"
        android:layout_marginTop="@dimen/margin2"
        android:background="@color/pa_grey"
        android:orientation="vertical"
        android:padding="@dimen/margin6"
        android:visibility="visible" >

        <com.pa.common.TypefaceTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin2"
            android:layout_marginTop="@dimen/margin2"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Please enter the verification code provided by the merchant"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_big"
            android:textStyle="normal"
            app:typeface="OpenSans-Bold" />

        <com.pa.common.TypefaceTextView
            android:id="@+id/msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin2"
            android:layout_marginTop="@dimen/margin2"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Invalid passcode"
            android:textColor="@color/red"
            android:textSize="@dimen/txt_medium"
            android:textStyle="normal"
            app:typeface="OpenSans-Bold" />

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.pa.common.TypefaceEditText
                android:id="@+id/txtPasscode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin2"
                android:layout_marginTop="@dimen/margin2"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:hint="Enter Verification Code"
                android:inputType="number"
                android:textColor="@color/black"
                android:textSize="@dimen/txt_big"
                android:textStyle="normal"
                app:typeface="OpenSans-Bold" />

            <Button               android:visibility="gone"
                android:id="@+id/btnScanQR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QR" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <com.pa.common.TypefaceButton
                android:id="@+id/btnCancel2"
                android:layout_width="0dp"
                android:layout_height="@dimen/edittext_height"
                android:layout_marginBottom="@dimen/margin2"
                android:layout_marginTop="@dimen/margin2"
                android:layout_weight="1"
                android:background="@drawable/btn_effect_gray"
                android:gravity="center"
                android:text="CANCEL"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_big"
                android:textStyle="normal"
                app:typeface="OpenSans-Regular" />

            <com.pa.common.TypefaceButton
                android:id="@+id/btnNext2"
                android:layout_width="0dp"
                android:layout_height="@dimen/edittext_height"
                android:layout_marginLeft="@dimen/margin2"
                android:layout_marginTop="@dimen/margin2"
                android:layout_weight="1"
                android:background="@drawable/btn_effect_blue"
                android:gravity="center"
                android:text="VERIFY"
                android:textColor="@color/white"
                android:textSize="@dimen/txt_big"
                android:textStyle="normal"
                app:typeface="OpenSans-Regular" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>