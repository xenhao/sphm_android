<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.pa.common.ImageViewFitWidth
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin2"
        android:src="@drawable/post_job_4"
         />
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <com.pa.common.TypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin4"
                android:gravity="center"
                android:text="Select Bid Window Period"
                android:textAppearance="@style/Label"
                android:textSize="@dimen/txt_big"
                app:typeface="OpenSans-Bold" />

            <com.pa.common.TypefaceTextView
                android:id="@+id/txtBidPeriod"
                android:layout_width="match_parent"
                android:drawableRight="@drawable/icon_arrow_down"
                android:layout_height="@dimen/edittext_height3"
                android:layout_marginTop="@dimen/margin4"
                android:background="@drawable/white_rectangle_solid"
                android:gravity="left|center_vertical"
                android:text="Specify Your Bid Period"
                android:inputType="number"
                android:textAppearance="@style/Placeholder"
                android:textSize="@dimen/txt_big"
                app:typeface="OpenSans-Regular" />

            <com.pa.common.TypefaceTextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin4"
                android:gravity="center"
                android:text="Your Estimated Budget (optional)"
                android:textAppearance="@style/Label"
                android:textSize="@dimen/txt_big"
                app:typeface="OpenSans-Bold" />

            <com.pa.common.TypefaceEditText
                android:visibility="gone"
                android:id="@+id/txtBudget"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height3"
                android:layout_marginTop="@dimen/margin4"
                android:background="@drawable/white_rectangle_solid"
                android:gravity="left|center_vertical"
                android:hint="Input your estimated budget"
                android:inputType="number"
                android:textAppearance="@style/Placeholder"
                android:textSize="@dimen/txt_big"
                app:typeface="OpenSans-Regular" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin2"
        android:orientation="horizontal"
        android:visibility="visible" >

        <com.pa.common.TypefaceButton
            android:visibility="gone"
            android:id="@+id/btnCancel2"
            android:layout_width="0dp"
            android:layout_height="@dimen/edittext_height"
            android:layout_marginRight="@dimen/margin2"
            android:layout_weight="1"
            android:background="@drawable/btn_effect_gray"
            android:gravity="center"
            android:paddingRight="@dimen/margin3"
            android:text="BACK"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_big"
            android:textStyle="normal"
            app:typeface="OpenSans-Regular" />

        <com.pa.common.TypefaceButton
            android:id="@+id/btnNext2"
            android:layout_width="0dp"
            android:layout_height="@dimen/edittext_height"
            android:layout_weight="1"
            android:background="@drawable/btn_effect_blue"
            android:gravity="center"
            android:text="NEXT"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_big"
            android:textStyle="normal"
            app:typeface="OpenSans-Regular" />
    </LinearLayout>

</LinearLayout>