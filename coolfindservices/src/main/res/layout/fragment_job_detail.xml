                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Job Status:"
                            android:textAppearance="@style/Label"
                            android:textSize="@dimen/txt_big"
                            app:typeface="OpenSans-Bold" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin2"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <com.pa.common.TypefaceTextView
                                android:id="@+id/txtBidStatus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/pa_blue"
                                android:gravity="center"
                                android:padding="@dimen/margin2"
                                android:text="OPEN"
                                android:textColor="@color/white"
                                android:textSize="@dimen/txt_big"
                                app:typeface="OpenSans-Bold" />

                            <com.pa.common.TypefaceTextView
                                android:id="@+id/txtCloseTime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/pa_medium_grey"
                                android:gravity="center"
                                android:padding="@dimen/margin2"
