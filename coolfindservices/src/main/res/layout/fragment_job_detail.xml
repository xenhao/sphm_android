                <com.pa.common.TypefaceTextView
                    android:id="@+id/catParent"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height2"
                    android:drawableRight="@drawable/icon_arrow_up"
                    android:gravity="left|center_vertical"
                    android:text="SERVICE DETAILS"
                    android:textAppearance="@style/Label"
                    android:textSize="@dimen/txt_big"
                    app:typeface="OpenSans-Bold" />

                <LinearLayout
                    android:id="@+id/categoryWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider"
                        android:layout_marginBottom="@dimen/margin2"
                        android:layout_marginTop="@dimen/margin2"
                        android:background="@color/pa_grey" />

                    <include android:id="@+id/layout_vo" android:visibility="gone" layout="@layout/field_vo" />

                    <LinearLayout android:visibility="visible"
                        android:id="@+id/service_detail_content"
