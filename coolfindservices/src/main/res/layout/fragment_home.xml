<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pa_grey"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/edittext_height3"
        android:background="@color/pa_light_orange"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="@dimen/edittext_height"
            android:layout_height="@dimen/edittext_height"
            android:padding="@dimen/padding"
            android:src="@drawable/icon_menu" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center" >

            <com.pa.common.ImageViewFitHeight
                android:layout_width="wrap_content"
                android:layout_height="@dimen/edittext_height"
                android:layout_gravity="center"
                android:src="@drawable/cool_find_logo" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btnIntercom"
            android:layout_width="@dimen/edittext_height"
            android:layout_height="@dimen/edittext_height"
            android:padding="@dimen/padding"
            android:src="@drawable/icon_chat" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/margin6"
        android:layout_marginRight="@dimen/margin6"
        android:layout_weight="1"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.pa.common.TypefaceAutoCompleteTextView
                android:id="@+id/find_service"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edittext_height3"
                android:layout_marginTop="@dimen/margin4"
                android:background="@drawable/white_rectangle_solid"
                android:drawableLeft="@drawable/icon_search"
                android:drawablePadding="@dimen/margin1"
                android:hint="Find service"
                android:textSize="@dimen/txt_big"
                android:visibility="gone"
                app:typeface="OpenSans-Regular" />

            <com.pa.common.TypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin4"
                android:gravity="center"
                android:text="CATEGORY"
                android:textColor="@color/pa_orange"
                android:textSize="@dimen/txt_xx_big"
                app:typeface="OpenSans-Bold" />

            <com.pa.common.TypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin4"
                android:gravity="center"
                android:text="Browse Service By Category"
                android:textColor="@color/pa_dark_grey"
                android:textSize="@dimen/txt_big"
                app:typeface="OpenSans-Bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin2"
                android:orientation="horizontal" >

                <com.pa.common.ImageViewFitWidth
                    android:id="@+id/menu1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/btn_effect_menu1" />

                <com.pa.common.ImageViewFitWidth
                    android:id="@+id/menu2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/margin2"
                    android:layout_marginRight="@dimen/margin2"
                    android:layout_weight="1"
                    android:src="@drawable/btn_effect_menu2" />

                <com.pa.common.ImageViewFitWidth
                    android:id="@+id/menu3"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/btn_effect_menu3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin2"
                android:orientation="horizontal" >

                <com.pa.common.ImageViewFitWidth
                    android:id="@+id/menu4"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/btn_effect_menu4" />

                <com.pa.common.ImageViewFitWidth
                    android:id="@+id/menu5"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/margin2"
                    android:layout_marginRight="@dimen/margin2"
                    android:layout_weight="1"
                    android:src="@drawable/btn_effect_menu5" />

                <com.pa.common.ImageViewFitWidth
                    android:id="@+id/menu6"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/btn_effect_menu6" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin2"
                android:orientation="horizontal" >

                <com.pa.common.ImageViewFitWidth
                    android:id="@+id/menu7"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/btn_effect_menu7" />

                <com.pa.common.ImageViewFitWidth
                    android:id="@+id/menu8"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/margin2"
                    android:layout_marginRight="@dimen/margin2"
                    android:layout_weight="1"
                    android:src="@drawable/btn_effect_menu8" />

                <com.pa.common.ImageViewFitWidth
                    android:id="@+id/menu9"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:src="@drawable/btn_effect_menu9" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <GridView
        android:horizontalSpacing="@dimen/margin1"
        android:verticalSpacing="@dimen/margin1"
        android:id="@+id/gridCategory"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:cacheColorHint="#00000000"
        android:divider="@color/black"
        android:dividerHeight="0dp"
        android:numColumns="3" >
    </GridView>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height3"
        android:background="@color/pa_light_orange"
        android:gravity="center" >

        <LinearLayout
            android:id="@+id/bottom_menu_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center" >

            <com.pa.common.ImageViewFitHeight
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:src="@drawable/icon_post_a_job" />
        </LinearLayout>

        <View android:visibility="gone"
            android:layout_width="@dimen/divider"
            android:layout_height="@dimen/button_height"
            android:background="@color/white" />

        <LinearLayout android:visibility="gone"
            android:id="@+id/bottom_menu_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center" >

            <com.pa.common.ImageViewFitHeight
                android:id="@+id/btn_appointment"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height"
                android:src="@drawable/icon_appointment" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>