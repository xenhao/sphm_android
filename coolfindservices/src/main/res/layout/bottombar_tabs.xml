

    <tabs xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <tab
            id="@+id/tab_home"
            icon="@drawable/navbar_home"
            title="Home"
            activeColor="@color/pa_orange"
            inActiveColor="@color/gray"
            barColorWhenSelected="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingPrefix" />
        <tab
            id="@+id/tab_jobrequest"
            icon="@drawable/navbar_jobrequest"
            title="Job Request"
            activeColor="@color/pa_orange"
            inActiveColor="@color/gray"
            barColorWhenSelected="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingPrefix" />
        <tab
            id="@+id/tab_appointments"
            icon="@drawable/navbar_appointment"
            title="Appointments"
            activeColor="@color/pa_orange"
            inActiveColor="@color/gray"
            barColorWhenSelected="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingPrefix" />
        <tab
            id="@+id/tab_others"
            icon="@drawable/navbar_others"
            title="Others"
            activeColor="@color/pa_orange"
            inActiveColor="@color/gray"
            barColorWhenSelected="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingPrefix" />
    </tabs>