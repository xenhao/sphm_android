                    <LinearLayout
                        android:id="@+id/gallery_content"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/profilecircle2"
                        android:orientation="horizontal" >
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin4"
                android:background="@drawable/white_rectangle_solid"
                android:orientation="vertical"
                android:padding="@dimen/margin4" >

                <com.pa.common.TypefaceTextView
                    android:id="@+id/commentParent"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height2"
                    android:drawableRight="@drawable/icon_arrow_up"
                    android:gravity="left|center_vertical"
                    android:text="Public Comments"
                    android:textAppearance="@style/Label"
                    android:textSize="@dimen/txt_big"
                    app:typeface="OpenSans-Bold" />

                <LinearLayout
                    android:id="@+id/categoryWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider"
                        android:layout_marginBottom="@dimen/margin2"
                        android:layout_marginTop="@dimen/margin2"
                        android:background="@color/pa_grey" />

                    <com.pa.common.TypefaceTextView
                        android:id="@+id/view_more_comments"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext_height2"
                        android:gravity="left|center_vertical"
                        android:text="View 3 earlier comments"
                        android:layout_marginTop="@dimen/margin2"
                        android:textSize="@dimen/txt_big"
                        android:textColor="@color/pa_blue"
                        android:visibility="gone"
                        app:typeface="OpenSans-Regular" />

                    <LinearLayout
                        android:id="@+id/wrapper_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                    </LinearLayout>

                    <com.pa.common.TypefaceTextView
                        android:id="@+id/post_new_comment"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext_height2"
                        android:gravity="left|center_vertical"
                        android:text="@string/post_new_comment"
                        android:textSize="@dimen/txt_big"
                        android:layout_marginTop="@dimen/margin4"
                        android:textColor="@color/pa_blue"
                        app:typeface="OpenSans-Regular" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/wrapperAction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin4"
        android:orientation="horizontal"
        android:visibility="visible" >

        <com.pa.common.TypefaceButton
            android:id="@+id/btnNext2"
            android:layout_width="0dp"
            android:layout_height="@dimen/edittext_height"
            android:layout_weight="1"
            android:background="@drawable/btn_effect_gray"
            android:layout_marginRight="@dimen/margin2"
            android:gravity="center"
            android:text="CANCEL REQUEST"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_big"
            android:textStyle="normal"
            app:typeface="OpenSans-Regular" />

        <com.pa.common.TypefaceButton
            android:id="@+id/btnCancel2"
            android:layout_width="0dp"
            android:layout_height="@dimen/edittext_height"
            android:layout_weight="1"
            android:background="@drawable/btn_effect_blue"
            android:gravity="center"
            android:paddingRight="@dimen/margin3"
            android:text="CLOSE BID"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_big"
            android:textStyle="normal"
            app:typeface="OpenSans-Regular" />
    </LinearLayout>

</LinearLayout>