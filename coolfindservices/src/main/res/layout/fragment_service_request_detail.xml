                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="left|center_vertical"
                                android:text="Bid(s) received"
                                android:textColor="@color/pa_dark_grey"
                                android:textSize="@dimen/txt_medium"
                                app:typeface="OpenSans-Bold" />

                            <com.pa.common.TextViewSquare
                                android:id="@+id/txtTotalBid"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/pa_orange"
                                android:gravity="center"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="@dimen/txt_extra_big"
                                app:typeface="OpenSans-Bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin4"
                            android:layout_weight="3"
                            android:orientation="vertical" >

                            <com.pa.common.TypefaceTextView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edittext_height2"
                                android:gravity="left|center_vertical"
                                android:text="Highest Bid"
                                android:textColor="@color/pa_dark_grey"
                                android:textSize="@dimen/txt_medium"
                                app:typeface="OpenSans-Bold" />

                            <com.pa.common.TypefaceTextView
                                android:id="@+id/txtBidHighest"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edittext_height"
                                android:gravity="left|center_vertical"
                                android:text=""
            android:textAppearance="@style/Label"
                                android:textSize="@dimen/txt_xx_big"
                                app:typeface="OpenSans-Bold" />

                            <!--<View-->
                                <!--android:layout_width="match_parent"-->
