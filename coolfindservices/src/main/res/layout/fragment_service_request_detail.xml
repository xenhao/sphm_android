                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edittext_height2"
                        android:gravity="left|center_vertical"
                        android:text="SELECT AND VIEW MERCHANT OFFER"
                        android:textColor="@color/white"
                        android:textSize="@dimen/txt_big"
                        app:typeface="OpenSans-Bold"
                        android:layout_weight="1"/>

                    <LinearLayout
                        android:id="@+id/btnSortMerchantList"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/merchant_offer_orange"
                        android:padding="@dimen/margin1">

                        <com.pa.common.TypefaceTextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edittext_height2"
                            android:gravity="center"
                            android:text="sort by"
                            android:textColor="@color/white"
                            android:textSize="@dimen/txt_small"
                            app:typeface="OpenSans-Bold"
                            android:layout_weight="1"/>

                        <ImageButton
                            android:layout_width="31dp"
                            android:layout_height="21.5dp"
                            android:background="@drawable/menuicon"
                            android:layout_weight="1"
                            android:duplicateParentState="true"
                            android:clickable="false"
                            android:focusable="false"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/categoryWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
