<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pa_grey"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/edittext_height3"
        android:background="@color/pa_orange"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/edittext_height"
            android:layout_height="@dimen/edittext_height"
            android:layout_marginLeft="@dimen/margin2"
            android:padding="@dimen/padding"
            android:src="@drawable/img_back" />

        <com.pa.common.TypefaceTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="JOB DETAIL"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_extra_big"
            app:typeface="OpenSans-Bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/pa_grey"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin2" >

                <com.pa.common.ImageViewFitWidth
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/icon_car" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin2"
                    android:layout_marginRight="@dimen/margin2"
                    android:layout_weight="4"
                    android:orientation="vertical" >

                    <com.pa.common.TypefaceTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Request Description"
                        android:textColor="@color/pa_blue"
                        android:textSize="@dimen/txt_big"
                        app:typeface="OpenSans-Bold" />

                    <com.pa.common.TypefaceTextView
                        android:id="@+id/txtDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=" "
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_big"
                        app:typeface="OpenSans-Bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <com.pa.common.TypefaceTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bid Status:"
                            android:textColor="@color/pa_blue"
                            android:textSize="@dimen/txt_big"
                            app:typeface="OpenSans-Bold" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin2"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <com.pa.common.TypefaceTextView
                                android:id="@+id/txtBidStatus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/pa_blue"
                                android:gravity="center"
                                android:padding="@dimen/margin2"
                                android:text="OPEN"
                                android:textColor="@color/white"
                                android:textSize="@dimen/txt_big"
                                app:typeface="OpenSans-Bold" />

                            <com.pa.common.TypefaceTextView
                                android:visibility="invisible"
                                android:id="@+id/txtCloseTime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/pa_medium_grey"
                                android:gravity="center"
                                android:padding="@dimen/margin2"
                                android:text="close in 2 days"
                                android:textColor="@color/pa_dark_grey"
                                android:textSize="@dimen/txt_small"
                                app:typeface="OpenSans-Bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/margin4"
                android:paddingRight="@dimen/margin4" >

                <com.pa.common.TypefaceTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin4"
                    android:text="Service Request ID:"
                    android:textColor="@color/pa_blue"
                    android:textSize="@dimen/txt_big"
                    app:typeface="OpenSans-Bold" />

                <com.pa.common.TypefaceTextView
                    android:id="@+id/txtSerial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SR-"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_big"
                    app:typeface="OpenSans-Regular" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin2"
                android:layout_marginLeft="@dimen/margin4"
                android:layout_marginRight="@dimen/margin4"
                android:layout_marginTop="@dimen/margin4"
                android:orientation="vertical" >

                <com.pa.common.TypefaceTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="APPOINTMENT DATE AND TIME"
                    android:textColor="@color/pa_blue"
                    android:textSize="@dimen/txt_big"
                    app:typeface="OpenSans-Regular" />

                <com.pa.common.TypefaceTextView
                    android:id="@+id/txtServiceTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin2"
                    android:text=" "
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_big"
                    app:typeface="OpenSans-Regular" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin2"
                android:layout_marginLeft="@dimen/margin4"
                android:layout_marginRight="@dimen/margin4"
                android:layout_marginTop="@dimen/margin4"
                android:orientation="vertical" >

                <com.pa.common.TypefaceTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SERVICE PROVIDER"
                    android:textColor="@color/pa_blue"
                    android:textSize="@dimen/txt_big"
                    app:typeface="OpenSans-Regular" />

                <com.pa.common.TypefaceTextView
                    android:id="@+id/txtServiceProvider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin2"
                    android:text=" "
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_big"
                    app:typeface="OpenSans-Regular" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/wrapper_service_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin4"
                android:background="@drawable/white_rectangle_solid"
                android:orientation="vertical"
                android:padding="@dimen/margin4" >

                <com.pa.common.TypefaceTextView
                    android:id="@+id/catParent"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height2"
                    android:drawableRight="@drawable/icon_arrow_up"
                    android:gravity="left|center_vertical"
                    android:text="SERVICE DETAILS"
                    android:textColor="@color/pa_blue"
                    android:textSize="@dimen/txt_big"
                    app:typeface="OpenSans-Bold" />

                <LinearLayout
                    android:id="@+id/categoryWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider"
                        android:layout_marginBottom="@dimen/margin2"
                        android:layout_marginTop="@dimen/margin2"
                        android:background="@color/pa_grey" />

                    <LinearLayout
                        android:id="@+id/service_detail_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/wrapper_job_complete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/margin4"
                android:paddingRight="@dimen/margin4" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <com.pa.common.TypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="JOB COMPLETED"
                        android:textColor="@color/pa_blue"
                        android:textSize="@dimen/txt_extra_big"
                        app:typeface="OpenSans-Bold" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/margin1"
                        android:layout_weight="1"
                        android:background="@color/pa_blue" />
                </LinearLayout>

                <com.pa.common.TypefaceTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Service Provider"
                    android:textColor="@color/pa_blue"
                    android:textSize="@dimen/txt_big"
                    app:typeface="OpenSans-Regular" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <com.pa.common.TypefaceTextView
                        android:id="@+id/txtCompleteServiceProvider"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SR-"
                        android:textColor="@color/pa_dark_grey"
                        android:textSize="@dimen/txt_big"
                        app:typeface="OpenSans-Regular" />

                    <RatingBar
                        android:id="@+id/txtCompleteRatingBar"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:max="5"
                        android:numStars="5"
                        android:rating="3" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin2"
        android:visibility="visible" >

        <com.pa.common.TypefaceButton
            android:id="@+id/do_job"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height3"
            android:layout_marginBottom="@dimen/margin3"
            android:layout_marginLeft="@dimen/margin6"
            android:layout_marginRight="@dimen/margin6"
            android:layout_marginTop="@dimen/margin3"
            android:background="@drawable/btn_effect_blue"
            android:gravity="center"
            android:lines="5"
            android:text="VERIFY MERCHANT"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_big"
            app:typeface="OpenSans-Regular" />

        <com.pa.common.TypefaceButton
            android:id="@+id/cancel_job"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height3"
            android:layout_marginBottom="@dimen/margin3"
            android:layout_marginLeft="@dimen/margin6"
            android:layout_marginRight="@dimen/margin6"
            android:layout_marginTop="@dimen/margin1"
            android:background="@drawable/btn_effect_gray"
            android:gravity="center"
            android:lines="5"
            android:text="CANCEL JOB"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_big"
            app:typeface="OpenSans-Regular" />
    </LinearLayout>

</LinearLayout>