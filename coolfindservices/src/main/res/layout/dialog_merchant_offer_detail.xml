<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/edittext_height3"
        android:background="@color/pa_orange"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/edittext_height"
            android:layout_height="@dimen/edittext_height"
            android:layout_marginLeft="@dimen/margin2"
            android:padding="@dimen/padding"
            android:src="@drawable/img_back" />

        <com.pa.common.TypefaceTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="MERCHANT OFFER SUMMARY"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_extra_big"
            app:typeface="OpenSans-Bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/pa_grey"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/margin2"
                android:visibility="gone" >

                <com.pa.common.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/margin2"
                    android:paddingRight="@dimen/margin2"
                    android:text="Offer Details"
                    android:textColor="@color/pa_blue"
                    android:textSize="@dimen/txt_big"
                    app:typeface="OpenSans-Bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/margin1"
                    android:layout_weight="1"
                    android:background="@color/pa_blue"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin2" >

                <com.pa.common.ImageViewFitWidth
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_launcher"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin2"
                    android:layout_marginRight="@dimen/margin2"
                    android:layout_weight="4"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical" >

                            <com.pa.common.TypefaceTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Company Name : "
                                android:textColor="@color/pa_blue"
                                android:textSize="@dimen/txt_extra_big"
                                android:visibility="gone"
                                app:typeface="OpenSans-Regular" />

                            <com.pa.common.TypefaceTextView
                                android:id="@+id/txtName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/txt_extra_big"
                                app:typeface="OpenSans-Bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="30"
                                    android:orientation="vertical">

                                    <com.pa.common.TypefaceTextView
                                        android:id="@+id/txtTotalReview"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/txt_extra_big"
                                        app:typeface="OpenSans-Regular" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/margin1"
                                        android:gravity="center"
                                        android:orientation="horizontal"
                                        android:visibility="visible" >

                                        <com.pa.common.TypefaceTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Rating : "
                                            android:textColor="@color/pa_blue"
                                            android:textSize="@dimen/txt_extra_big"
                                            android:visibility="gone"
                                            app:typeface="OpenSans-Regular" />

                                        <RatingBar
                                            android:id="@+id/ratingBar1"
                                            style="?android:attr/ratingBarStyleSmall"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:max="5"
                                            android:numStars="5"
                                            android:rating="3" />

                                        <com.pa.common.TypefaceTextView
                                            android:id="@+id/rating_msg"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Rating"
                                            android:textAppearance="@style/Normal"
                                            android:textSize="@dimen/txt_big"
                                            app:typeface="OpenSans-Regular" />
                                    </LinearLayout>
                                </LinearLayout>

                                <com.pa.common.ImageViewFitWidth
                                    android:id="@+id/verified"
                                    android:layout_width="72dp"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/margin2"
                                    android:layout_weight="1"
                                    android:layout_gravity="center"
                                    android:src="@drawable/icon_verified" />

                                <com.pa.common.TypefaceButton
                                    android:id="@+id/btnMerchantProfile"
                                    android:layout_width="72dp"
                                    android:layout_height="72dp"
                                    android:layout_margin="@dimen/margin2"
                                    android:layout_weight="1"
                                    android:layout_gravity="center"
                                    android:background="@drawable/view_profile"
                                    android:gravity="center" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin6"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <com.pa.common.TypefaceTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Selected Service Date and Time : "
                            android:textColor="@color/pa_blue"
                            android:textSize="@dimen/txt_extra_big"
                            app:typeface="OpenSans-Bold" />

                        <com.pa.common.TypefaceTextView
                            android:id="@+id/txtDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/pa_dark_grey"
                            android:textSize="@dimen/txt_extra_big"
                            app:typeface="OpenSans-Regular" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/horizontal_line_grey" />

            <!-- Second part -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/margin2" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin2"
                    android:layout_marginRight="@dimen/margin2"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|center_horizontal"
                            android:orientation="horizontal" >

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <com.pa.common.TypefaceTextView
                                    android:id="@+id/txt_offer_price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Offer Price\t\t\t\t\t\t: "
                                    android:textAppearance="@style/Normal"
                                    android:textSize="@dimen/txt_extra_big"
                                    app:typeface="OpenSans-Bold" />

                            </RelativeLayout>

                            <com.pa.common.TypefaceTextView
                                android:id="@+id/txtPrice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/black"
                                android:textSize="@dimen/txt_xxx_big"
                                app:typeface="OpenSans-Bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin6"
                            android:orientation="vertical" >

                            <com.pa.common.TypefaceTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Merchant remark\t: "
                                android:textAppearance="@style/Normal"
                                android:textSize="@dimen/txt_extra_big"
                                app:typeface="OpenSans-Bold" />

                            <com.pa.common.TypefaceTextView
                                android:id="@+id/txtRemarks"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textAppearance="@style/Normal"
                                android:textSize="@dimen/txt_extra_big"
                                app:typeface="OpenSans-Regular" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin6"
                            android:orientation="vertical" >

                            <com.pa.common.TypefaceTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Photo\t: "
                                android:textAppearance="@style/Normal"
                                android:textSize="@dimen/txt_extra_big"
                                app:typeface="OpenSans-Bold" />

                            <LinearLayout
                                android:id="@+id/merchant_gallery"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/profilecircle2"
                                android:orientation="horizontal" >
                            </LinearLayout>
                        </LinearLayout>

                        <com.pa.common.TypefaceTextView
                            android:id="@+id/txtReview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin4"
                            android:text=""
                            android:textColor="@color/pa_blue"
                            android:textSize="@dimen/txt_big"
                            android:visibility="gone"
                            app:typeface="OpenSans-Bold" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/accordion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin4"
                android:background="@drawable/white_rectangle_solid"
                android:divider="@drawable/divider_grey"
                android:showDividers="middle"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/headerPromoCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="@dimen/margin2"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/black_tick_icon"
                            android:visibility="invisible"/>

                        <com.pa.common.TypefaceTextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edittext_height2"
                            android:layout_marginLeft="@dimen/margin2"
                            android:text="Use Promo Code"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_big"
                            app:typeface="OpenSans-Regular" />

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/containerPromoCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <include layout="@layout/horizontal_line_grey" />

                        <TextView
                            android:id="@+id/txtPromoCode"
                            android:visibility="invisible"
                            android:padding="@dimen/margin2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:textAppearance="@style/Bold"
                            android:textSize="@dimen/txt_extra_big"
                            android:text="Promotion Code Accepted"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin2"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/inputPromoCode"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="8dp"
                                android:hint="Enter Promo Code (if any)"
                                android:layout_weight="4"/>

                            <com.pa.common.TypefaceButton
                                android:id="@+id/btnPromoCode"
                                android:layout_width="50dp"
                                android:layout_height="@dimen/edittext_height"
                                android:background="@drawable/btn_effect_gray"
                                android:gravity="center"
                                android:text="APPLY"
                                android:textColor="@color/white"
                                android:textSize="@dimen/txt_big"
                                android:textStyle="normal"
                                app:typeface="OpenSans-Regular" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/headerFreeCredits"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="@dimen/margin2"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/black_tick_icon"
                            android:visibility="invisible"/>

                        <com.pa.common.TypefaceTextView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edittext_height2"
                            android:layout_marginLeft="@dimen/margin2"
                            android:text="Use Credits"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_big"
                            app:typeface="OpenSans-Regular" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/containerFreeCredits"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <include layout="@layout/horizontal_line_grey" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin2"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txtCredits"
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:textAppearance="@style/Bold"
                                    android:textSize="@dimen/txt_extra_big"
                                    android:text="Credits Accepted"/>

                                <com.pa.common.TypefaceTextView
                                    android:id="@+id/txtAvailableCredits"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Available Credits:"
                                    android:textAppearance="@style/Bold"
                                    android:textSize="@dimen/txt_extra_big"
                                    app:typeface="OpenSans-Bold" />

                                <com.pa.common.TypefaceTextView
                                    android:id="@+id/txtBalanceCredits"
                                    android:visibility="gone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Balance Credits:"
                                    android:textAppearance="@style/Bold"
                                    android:textSize="@dimen/txt_extra_big"
                                    app:typeface="OpenSans-Bold" />

                                <com.pa.common.TypefaceTextView
                                    android:id="@+id/freeCredits"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="@style/Bold"
                                    android:textSize="@dimen/txt_extra_big"
                                    app:typeface="OpenSans-Bold" />

                            </LinearLayout>

                            <com.pa.common.TypefaceButton
                                android:id="@+id/btnCredits"
                                android:layout_width="50dp"
                                android:layout_height="@dimen/edittext_height"
                                android:background="@drawable/btn_effect_gray"
                                android:gravity="center"
                                android:text="APPLY"
                                android:textColor="@color/white"
                                android:textSize="@dimen/txt_big"
                                android:textStyle="normal"
                                app:typeface="OpenSans-Regular" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin4"
                android:orientation="horizontal"
                android:visibility="visible" >

                <com.pa.common.TypefaceButton
                    android:id="@+id/btnBack2"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/edittext_height"
                    android:layout_marginRight="@dimen/margin2"
                    android:layout_weight="1"
                    android:background="@drawable/btn_effect_gray"
                    android:gravity="center"
                    android:paddingRight="@dimen/margin3"
                    android:text="BACK"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_big"
                    android:textStyle="normal"
                    android:visibility="gone"
                    app:typeface="OpenSans-Regular" />

                <com.pa.common.TypefaceButton
                    android:id="@+id/btnOffer"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/edittext_height"
                    android:layout_weight="1"
                    android:background="@drawable/btn_effect_blue"
                    android:gravity="center"
                    android:text="ACCEPT OFFER"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txt_big"
                    android:textStyle="normal"
                    app:typeface="OpenSans-Regular" />
            </LinearLayout>

            <com.pa.common.TypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin4"
                android:text="* Page Advisor will preauthorize your card to ensure your card is valid. You will not be charged at this time. You will be billed only upon completion of service delivery."
                android:textAppearance="@style/Normal"
                android:textSize="@dimen/txt_medium"
                android:textColor="@color/red"
                app:typeface="OpenSans-Bold"
                android:visibility="gone"/>

            <include layout="@layout/horizontal_line_grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/margin2"
                android:visibility="gone" >

                <com.pa.common.TypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/margin2"
                    android:paddingRight="@dimen/margin2"
                    android:text="Merchant&apos;s Remarks"
                    android:textColor="@color/pa_blue"
                    android:textSize="@dimen/txt_big"
                    app:typeface="OpenSans-Bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/margin1"
                    android:layout_weight="1"
                    android:background="@color/pa_blue" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/wrapper_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin4"
                android:background="@drawable/white_rectangle_solid"
                android:orientation="vertical"
                android:padding="@dimen/margin4" >

                <com.pa.common.TypefaceTextView
                    android:id="@+id/title_service"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height2"
                    android:drawableRight="@drawable/icon_arrow_up"
                    android:gravity="left|center_vertical"
                    android:text="SERVICE DETAILS"
                    android:textColor="@color/pa_blue"
                    android:textSize="@dimen/txt_big"
                    app:typeface="OpenSans-Bold" />

                <LinearLayout
                    android:id="@+id/wrapper_service2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider"
                        android:layout_marginBottom="@dimen/margin2"
                        android:layout_marginTop="@dimen/margin2"
                        android:background="@color/pa_grey" />

                    <LinearLayout
                        android:id="@+id/wrapperServiceDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/wrapper_service_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin4"
                android:background="@drawable/white_rectangle_solid"
                android:orientation="vertical"
                android:padding="@dimen/margin4" >

                <com.pa.common.TypefaceTextView
                    android:id="@+id/title_service_detail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edittext_height2"
                    android:drawableRight="@drawable/icon_arrow_up"
                    android:gravity="left|center_vertical"
                    android:text="SERVICE DELIVERY DETAILS"
                    android:textColor="@color/pa_blue"
                    android:textSize="@dimen/txt_big"
                    app:typeface="OpenSans-Bold" />

                <LinearLayout
                    android:id="@+id/wrapper_service_detail2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider"
                        android:layout_marginBottom="@dimen/margin2"
                        android:layout_marginTop="@dimen/margin2"
                        android:background="@color/pa_grey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <com.pa.common.TypefaceTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingBottom="@dimen/margin2"
                            android:paddingLeft="@dimen/margin4"
                            android:paddingRight="@dimen/margin4"
                            android:paddingTop="@dimen/margin2"
                            android:text="1st Preferred Date &amp; Time"
                            android:textColor="@color/pa_blue"
                            android:textSize="@dimen/txt_big"
                            app:typeface="OpenSans-Bold" />

                        <com.pa.common.TypefaceTextView
                            android:id="@+id/txt_first_prefer_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:paddingBottom="@dimen/margin2"
                            android:paddingLeft="@dimen/margin4"
                            android:paddingRight="@dimen/margin4"
                            android:paddingTop="@dimen/margin2"
                            android:text=" "
                            android:textColor="@color/pa_dark_grey"
                            android:textSize="@dimen/txt_big"
                            app:typeface="OpenSans-Regular" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <com.pa.common.TypefaceTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:paddingBottom="@dimen/margin2"
                                android:paddingLeft="@dimen/margin4"
                                android:paddingRight="@dimen/margin4"
                                android:paddingTop="@dimen/margin2"
                                android:text="Address"
                                android:textColor="@color/pa_blue"
                                android:textSize="@dimen/txt_big"
                                app:typeface="OpenSans-Bold" />

                            <com.pa.common.TypefaceTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="left"
                                android:paddingBottom="@dimen/margin2"
                                android:paddingLeft="@dimen/margin4"
                                android:paddingRight="@dimen/margin4"
                                android:paddingTop="@dimen/margin2"
                                android:text=":"
                                android:textColor="@color/pa_blue"
                                android:textSize="@dimen/txt_big"
